                    android:focusable="false" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Cierra:" />

                <EditText
                    android:id="@+id/viernesCierraEditText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:onClick="mostrarTimePicker"
                    android:enabled="false"
                    android:inputType="none"
                    android:focusable="false" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView31"
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sábado:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Abre:" />

                <EditText
                    android:id="@+id/sabadoAbreEditText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:onClick="mostrarTimePicker"
                    android:enabled="false"
                    android:inputType="none"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Cierra:" />

                <EditText
                    android:id="@+id/sabadoCierraEditText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:onClick="mostrarTimePicker"
                    android:enabled="false"
                    android:inputType="none"
                    android:focusable="false" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView36"
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domingo:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Abre:" />

                <EditText
                    android:id="@+id/domingoAbreEditText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:onClick="mostrarTimePicker"
                    android:enabled="false"
                    android:inputType="none"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Cierra:" />

                <EditText
                    android:id="@+id/domingoCierraEditText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:onClick="mostrarTimePicker"
                    android:enabled="false"
                    android:inputType="none"
                    android:focusable="false"
                    android:tag="DomingoCierre"/>

            </LinearLayout>

            <Button
                android:text="Agregar Restaurante"
                android:id="@+id/agregarBtn"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/loginbuttonstylesecundary"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="0"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:onClick="agregarRestaurante"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>